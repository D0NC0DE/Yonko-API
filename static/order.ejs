<body class="clean-body u_body"
  style="margin: 0;padding: 0;-webkit-text-size-adjust: 100%;background-color: #f9f9f9;color: #000000">
  <!--[if IE]><div class="ie-container"><![endif]-->
  <!--[if mso]><div class="mso-container"><![endif]-->
  <table id="u_body" cellpadding="0" cellspacing="0">
    <tbody>
      <tr>
        <td>
          <div class="u-row-container" style="padding: 0px;background-color: transparent">
            <div class="u-row" style="background-color: #291918;">
              <div style="display: table;width: 100%;background-color: transparent;">
                <div class="u-col u-col-100">
                  <div style="background-color: #fff;height: 100%;width: 100%;">
                    <div style="padding: 20px;">
                      <table width="100%" cellpadding="0" cellspacing="0" border="0">
                        <tr>
                          <td align="center">
                            <a href="https://yonko.com/" target="_blank">
                              <img align="center" src="https://yonko-drive.ams3.cdn.digitaloceanspaces.com/yonko/logo.png" alt="Yonko" title="Yonko" width="63.8" class="v-src-width v-src-max-width" />
                            </a>
                          </td>
                        </tr>
                      </table>
                      <h1 style="text-align: center;">Order Confirmation</h1>
                      <p style="text-align: center;">Thank you for your order, <strong><%= userName %></strong>!</p>
                      <p style="text-align: center;">Your order details are below.</p>

                      <!-- Order Information Table -->
                      <table style="width: 100%; border-collapse: collapse; margin-top: 20px;">
                        <thead>
                          <tr>
                            <th style="border-bottom: 1px solid #ccc; padding: 8px;">Item</th>
                            <th style="border-bottom: 1px solid #ccc; padding: 8px;">Quantity</th>
                            <th style="border-bottom: 1px solid #ccc; padding: 8px;">Price</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% orderItems.forEach(item => { %>
                          <tr>
                            <td style="padding: 8px;"><%= item.name %></td>
                            <td style="padding: 8px; text-align: center;"><%= item.quantity %></td>
                            <td style="padding: 8px; text-align: right;">₦<%= item.price %></td>
                          </tr>
                          <% }); %>
                        </tbody>
                      </table>

                      <p style="text-align: right; margin-top: 20px;"><strong>Total:</strong> ₦<%= totalAmount %></p>

                      <!-- Delivery Details Section -->
                      <div style="margin-top: 20px;">
                        <h3>Delivery Address</h3>
                        <p><%= deliveryAddress %></p>
                        <p><strong>Estimated Delivery Date:</strong> <%= deliveryDate %></p>
                      </div>

                      <p style="text-align: center; color: #444;">If you have any questions, feel free to contact us at <a href="mailto:support@yonko.com">support@yonko.com</a>.</p>

                      <div align="center">
                        <a href="https://www.yonkomktp.com/" target="_blank" style="display: inline-block;padding: 14px 33px;background-color: #291918;color: #FFFFFF;border-radius: 4px;text-decoration: none;">
                          Visit Yonko Marketplace
                        </a>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="u-row-container" style="background-color: #291918;">
            <div class="u-row">
              <div style="display: table;width: 100%;">
                <div class="u-col u-col-100">
                  <div style="padding: 20px; color: #ffffff;">
                    <p style="text-align: center; font-size: 24px;"><strong>Yonko</strong></p>
                    <p style="text-align: center; color: #d56743;">7, Diamond Close, Kurudu Barracks<br /> FCT Abuja, Nigeria</p>
                    <div align="center">
                      <a href="https://facebook.com/" target="_blank"><img src="https://yonko-drive.ams3.cdn.digitaloceanspaces.com/temp/fb.png" width="32"></a>
                      <a href="https://twitter.com/" target="_blank"><img src="https://yonko-drive.ams3.cdn.digitaloceanspaces.com/temp/x.png" width="32"></a>
                      <a href="https://instagram.com/" target="_blank"><img src="https://yonko-drive.ams3.cdn.digitaloceanspaces.com/temp/insta.png" width="32"></a>
                      <a href="https://linkedin.com/" target="_blank"><img src="https://yonko-drive.ams3.cdn.digitaloceanspaces.com/temp/linkedin.png" width="32"></a>
                    </div>
                    <p style="text-align: center; color: #b0b1b4;">© 2024 Yonko. All Rights Reserved.</p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </td>
      </tr>
